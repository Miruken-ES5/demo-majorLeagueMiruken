.l-createPlayer
  .col-sm-10.col-sm-offset-1
    h1 {{vm.title}}
    .container-fluid
      .row
        .col-sm-6
          .wrapSmall
            .row
              .col-sm-12
                .row
                  form
                    .col-sm-12
                      .row
                        .col-sm-12
                          label
                            .teamName Player Name
                      .row
                        .col-sm-12
                          input(type="text" placeholder="First Name" ng-model="vm.player.firstName")
                          div.error(ng-messages='vm.$validation.player.firstName.errors')
                            div.small(ng-message='presence')
                              |  Player's first name required
                          input(type="text"  placeholder="Last Name" ng-model="vm.player.lastName")
                          div.error(ng-messages='vm.$validation.player.lastName.errors')
                            div.small(ng-message='presence')
                              |  Player's last name required
                      .row
                        .col-sm-12
                          label
                            .teamManager Assign a Number
                      .row
                        .col-sm-12
                          input(type="text"  placeholder="Enter a Number" ng-model="vm.player.number")
                          div.error(ng-messages='vm.$validation.player.number.errors')
                            div.small(ng-message='presence')
                              |  Player's number is required
                            div.small(ng-message='numericality')
                              |  Must be a number greater than 0
                      .row
                        .col-sm-12
                          label
                           .teamManager Players Date of Birth
                        .col-sm-12
                          a(href="")
                            span(class="glyphicon glyphicon-calendar")
                        input(type="text"  placeholder="MM/DD/YYYY" to-moment ng-model="vm.player.birthdate")
                          div.error(ng-messages='vm.$validation.player.birthdate.errors')
                            div.small(ng-message='presence')
                              |  Player's birthdate is required
                          div.small(ng-message='invalid')
                            | Invalid date.  Must be "MM/DD/YYYY"
        .col-sm-6
          .wrapSmall
            .row
              .col-sm-12
                h3.sectionTitle Player Preview
                p.playerName  {{vm.player.fullName}}
                h3.sectionTitle Player Number
                p.playerNumber &#x23{{vm.player.number}}
                h3.SectionTitle Players Age
                p.playerBirth {{vm.player.birthdate.format("L")}}
              .col-sm-6
                .row
                  .col-sm-12
                    .playerProfile
              .col-sm-12
                button.pull-right.btn.btn-success(ng-click="vm.save()") {{vm.buttonText}}
