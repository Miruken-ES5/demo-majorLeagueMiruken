.l-players
  .col-sm-10.col-sm-offset-1
    .container-fluid
      .row
        .col-sm-12
          .pageHeader
            h1 Players
  .col-sm-10.col-sm-offset-1(equal-height)
    .container-fluid
      .row
        .col-sm-4(ng-repeat="player in vm.players | orderBy:'lastName'" ng-click="vm.goToPlayer(player)")
          .wrapSmall.active.js-equal-height
            .row
              .col-sm-3
                img(src="../images/player.svg")
              .col-sm-9
                .row
                  .col-sm-9
                    h2.teamName {{player.fullName}}
                  .col-sm-3
                    span.playerNum &#x23{{player.number}}
                .row
                  .col-sm-6 Team
                  .col-sm-6 {{player.team.name}}
                .row
                  .col-sm-6 Age
                  .col-sm-6 {{player.age}}
