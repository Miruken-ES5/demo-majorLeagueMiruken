include playerDisplay.pug

.l-players
  .col-sm-10.col-sm-offset-1
    .container-fluid
      .row
        .col-sm-12
          .pageHeader
            h1 Players
  .col-sm-10.col-sm-offset-1(equal-height)
    .container-fluid
      .row
        .col-sm-4(ng-repeat="player in vm.players | orderBy:'lastName'" ng-click="vm.goToPlayer(player)")
          .wrapSmall.active.js-equal-height
            +playerDisplay("player")
    .row
      .col-sm-12
        button.pull-right.btn.btn-success(ng-click="vm.create()") Create a Player
