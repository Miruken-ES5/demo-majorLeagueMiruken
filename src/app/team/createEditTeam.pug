.l-createTeam
  .container-fluid
    .row
      .col-sm-10.col-sm-offset-1
        .wrap
          h1 {{vm.title}}
          .row
            .col-sm-6
              .row
                form
                  .col-sm-12
                    .row
                      .col-sm-12
                        .inputWrap
                          .col-sm-12
                            label
                              .teamName Team Name
                            input(type="text" ng-model="vm.team.name" placeholder="First Name")
                            div.error(ng-messages='ContactForm.email.$error')
                              div.small(ng-message='required')
                              | Team name must be 6 characters
                    .row
                      .col-sm-12
                        .inputWrap
                          .col-sm-12
                            label
                              .teamManager Assign a Manager
                          .col-sm-12.col-md-6
                            input(type="text" ng-model="vm.team.coach" placeholder="Enter Name")
                            div.error(ng-messages='ContactForm.email.$error')
                              div.small(ng-message='required')
                              |  First name required
                          .col-sm-12.col-md-6
                            input(type="text" ng-model="vm.team.name" placeholder="Last Name")
                            div.error(ng-messages='ContactForm.email.$error')
                              div.small(ng-message='required')
                              | Last name required
                      .col-sm-12
                        .inputWrap
                          .col-sm-12
                            label
                             .teamManager Assign a Coach
                          .col-sm-12.col-md-6
                            input(type="text" ng-model="vm.team.coach" placeholder="Enter Name")
                            div.error(ng-messages='ContactForm.email.$error')
                              div.small(ng-message='required')
                              |  First name required
                          .col-sm-12.col-md-6
                            input(type="text" ng-model="vm.team.name" placeholder="Last Name")
                            div.error(ng-messages='ContactForm.email.$error')
                              div.small(ng-message='required')
                              |  First name required
            .col-sm-6
              .row
                .col-sm-12
                  .sectionTitle Roster
              .row
                .col-sm-12
                  table
                    thead
                      tr
                        th Player
                        th Number
                        th Birth Date
                    tbody
                      tr
                        td
                          strong Purdie Dorsey
                        td 15
                        td May 8, 1984
                  button.pull-right(class="btn btn-default btn-xs") + add player
            .row
              .col-sm-12
                button.pull-right(class="btn btn-success" ng-click="vm.save()") {{vm.buttonText}}
