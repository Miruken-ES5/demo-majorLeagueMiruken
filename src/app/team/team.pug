.l-team
  .container-fluid
    .row
      .col-sm-10.col-sm-offset-1
        h1 View Team
        .row.row-eq-height
          .col-sm-5
            .wrapSmall
              .row
                .col-sm-6
                  h3.sectionTitle Team Name
                  p.teamName {{vm.team.name}}
                .col-sm-6
                  h3.sectionTitle Team Manager
                  p.teamManager {{vm.team.manager.fullName}}
                .col-sm-6
                  h3.sectionTitle Team Coach
                  p.teamCoach {{vm.team.coach.fullName}}
          .col-sm-7
            .wrapSmall
              h3.sectionTitle Roster
              table
                thead
                  tr
                    th Player
                    th Number
                    th Birth Date
                tbody
                  tr(ng-repeat="player in vm.team.roster | orderBy:'number'")
                    td
                      strong {{player.fullName}}
                    td {{player.number}}
                    td {{player.birthdate.format("L")}}
