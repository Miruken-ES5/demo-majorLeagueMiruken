include ../../jersey.pug

.l-team
  .container-fluid
    .row
      .col-sm-10.col-sm-offset-1
        h1 View Team
        .row(equal-height)
          .col-sm-6
            .wrapSmall.js-equal-height
              .row
                .col-sm-5
                  +jersey('{{vm.team.color.value}}')
                .col-sm-7
                  h3.teamName {{vm.team.name}}
                  h3.sectionTitle Team Manager
                  p.managerName {{vm.team.manager.fullName}}
                  h3.sectionTitle Team Coach
                  p.coachName {{vm.team.coach.fullName}}
          .col-sm-6
            .wrapSmall.js-equal-height
              .col-sm-12
                h3.sectionTitle Roster
                table.table
                  thead
                    tr
                      th Player
                      th Number
                      th Birth Date
                      th Age
                  tbody
                    tr(ng-repeat="player in vm.team.roster | orderBy:'number'")
                      td
                        strong {{player.fullName}}
                      td {{player.number}}
                      td {{player.birthdate.format("L")}}
                      td {{player.age}}
        .row
          .col-sm-12
            button.pull-right(class="btn" ng-click="vm.edit()") Edit Team
